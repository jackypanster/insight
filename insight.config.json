{
  "version": "0.1.0",
  "llm": {
    "provider": "openrouter",
    "models": {
      "primary": "anthropic/claude-3.5-sonnet",
      "fallback": "openai/gpt-3.5-turbo"
    },
    "maxTokens": 4000,
    "temperature": 0.3
  },
  "scanning": {
    "ignorePaths": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "__pycache__",
      ".pytest_cache",
      ".coverage",
      "*.pyc"
    ],
    "includeExtensions": [".py"],
    "maxFileSize": "1MB"
  },
  "analysis": {
    "chunkSize": 1500,
    "overlapSize": 200,
    "preserveBoundaries": true
  },
  "generation": {
    "outputDir": "insight-docs",
    "format": "markdown",
    "templates": "templates/"
  },
  "cache": {
    "enabled": true,
    "location": ".insight-cache",
    "ttl": 86400
  }
}