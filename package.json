{
  "name": "insight",
  "version": "0.1.0",
  "description": "AI-powered legacy code documentation generator",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "main": "./dist/cli/index.js",
  "bin": {
    "insight": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:edge": "vitest run tests/edge-cases",
    "test:serve": "vitest run tests/unit/webServer.test.ts tests/integration/serve-command.test.ts",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=github-actions",
    "test:debug": "vitest run --reporter=verbose --no-coverage",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist/ coverage/ .nyc_output/",
    "clean:all": "pnpm run clean && rm -rf node_modules/ pnpm-lock.yaml",
    "quality": "pnpm run lint && pnpm run type-check && pnpm run test:coverage",
    "quality:fix": "pnpm run lint:fix && pnpm run format && pnpm run type-check && pnpm run test",
    "prepublishOnly": "pnpm run quality && pnpm run clean && pnpm run build",
    "precommit": "pnpm run lint:fix && pnpm run format && pnpm run type-check && pnpm run test:unit"
  },
  "keywords": [
    "documentation",
    "code-analysis",
    "ast",
    "ai",
    "claude",
    "typescript",
    "cli"
  ],
  "author": "Insight Team",
  "license": "MIT",
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.0",
    "minimatch": "^10.0.3",
    "openai": "^4.28.0",
    "ora": "^7.0.1",
    "sirv": "^2.0.4",
    "tree-sitter": "^0.20.6",
    "tree-sitter-python": "^0.20.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.20",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}